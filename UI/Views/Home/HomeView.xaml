<UserControl x:Class="UI.Views.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:UI.Views"
             xmlns:application="clr-namespace:Core.ViewModels.Application;assembly=Core"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:faiItem="clr-namespace:UI.Views.FaiItem"
             xmlns:bins="clr-namespace:UI.Views.Bins"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" DataContext="{Binding Source={x:Static application:ApplicationViewModel.Instance}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!-- Left socket fai items -->
        <faiItem:FaiItemListStackView Grid.Column="0" FaiItems="{Binding Path=FaiItemsLeft}"/>
        <!-- Bin views -->
        <bins:SummaryView Grid.Column="1" DataContext="{Binding Path=SelectedSummary}"/>
        <!-- Right socket fai items -->
        <faiItem:FaiItemListStackView Grid.Column="2"  FaiItems="{Binding Path=FaiItemsRight}"/>
    </Grid>
</UserControl>
