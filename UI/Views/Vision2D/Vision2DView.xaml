<UserControl x:Class="UI.Views.Vision2D.Vision2DView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:halconDotNet="clr-namespace:HalconDotNet;assembly=halcondotnet"
             xmlns:application="clr-namespace:Core.ViewModels.Application;assembly=Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!-- Halcon window -->
        <halconDotNet:HSmartWindowControlWPF Grid.Column="0" DataContext="{Binding Source={x:Static application:ApplicationViewModel.Instance}, Path=ResultToDisplay2D}">
            <halconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding Source={x:Static application:ApplicationViewModel.Instance}, Path=ImageToDisplay2D}"/>
            <halconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding FitLines}" HColor="blue" LineWidth="2"/>
            <halconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding Contours}" HColor="orange" LineWidth="3"/>
            <halconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding Path=PointsUsed}" HColor="green" LineWidth="1"/>
            <halconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding Path=PointsIgnore}" HColor="red" LineWidth="1"/>
            <halconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding Path=RoiRectangles}" HDraw="margin" HColor="yellow"/>
        </halconDotNet:HSmartWindowControlWPF>

        <GroupBox Header="Find line configs" Grid.Column="1">
            <Grid>
                <!-- Find line config list view -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0" HorizontalAlignment="Right"
                          ItemsSource="{Binding Source={x:Static application:ApplicationViewModel.Instance}, Path=FindLineParams2D}"
                          CanUserSortColumns="True"
                          CanUserAddRows="False" />
                <StackPanel Grid.Row="1">
                    <!-- Switch socket view -->
                    <Button Command="{Binding Source={x:Static application:ApplicationViewModel.Instance}, Path=SwitchSocketView2DCommand}">
                        <StackPanel>
                            <TextBlock Text="Switch socket" HorizontalAlignment="Left" FontSize="10"/>
                            <TextBlock Text="{Binding Source={x:Static application:ApplicationViewModel.Instance}, Path=SocketToDisplay2D}" FontSize="24" VerticalAlignment="Center" Margin="3"/>
                        </StackPanel>
                    </Button>
                    <!-- Run manual tests -->
                    <Button Content="Run"
                            Command="{Binding Source={x:Static application:ApplicationViewModel.Instance}, Path=ManualTest2DCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
    </Grid>
</UserControl>